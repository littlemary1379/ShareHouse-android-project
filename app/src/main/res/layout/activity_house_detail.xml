<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_houseDetail_Drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HouseDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/include"
            layout="@layout/toolbar_main" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_houseImg"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/example_houseDetail_contents" />

                <TextView
                    android:id="@+id/tv_hashTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="#Bettertogether #신당동_약수_라이프 #WOOZOO"
                    android:textSize="12sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:stretchColumns="*">

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@color/colorBackgroundLightGray"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="주소"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_all"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="testText" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@color/colorBackgroundLightGray"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="성별"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_all"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="testText" />

                    </TableRow>

                    <TableRow>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@color/colorBackgroundLightGray"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="지점 계약"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_contractEndDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_all"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="testText" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@color/colorBackgroundLightGray"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="최대 거주"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_maxPerson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_all"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="testText" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@color/colorBackgroundLightGray"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="주택형태"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_houseForm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_all"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="testText" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@color/colorBackgroundLightGray"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="구조"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_construction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_all"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="testText" />

                    </TableRow>

                </TableLayout>

                <ImageView
                    android:id="@+id/iv_constImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15dp"
                    android:stretchColumns="*">

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBackgroundLightGray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="이름"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBackgroundLightGray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="성별"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBackgroundLightGray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="타입"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBackgroundLightGray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="면적"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBackgroundLightGray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="보증금"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBackgroundLightGray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="월세"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBackgroundLightGray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="입주"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBackgroundLightGray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="신청"/>

                    </TableRow>


                </TableLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start|left"
        app:headerLayout="@layout/action_bar_header"
        app:menu="@menu/navigation_menu" />


</androidx.drawerlayout.widget.DrawerLayout>